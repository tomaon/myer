%% -*- erlang -*-

{base_dir, ".rebar3"}.

{deps, [
        {baseline, {git,"https://github.com/tomaon/baseline",{branch,"master"}}}
       ]}.

{profiles, [
            {prod, [
                    {erl_opts, [
                                warnings_as_errors
                               ]}
                   ]},
            {test, [
                    {deps, [
%                           {emysql, {git,"https://github.com/Eonblast/Emysql",{branch,"master"}}}
                           ]},
                    {erl_opts, [
                              % bin_opt_info
                                %% debug_info % default
                                %% {d,'TEST'} % default
                                warn_export_all,
                                warn_export_vars,
                                warn_obsolete_guard,
                                warn_unused_import
                               ]},
                    {ct_opts, [
                               {dir, "test"},
                               {spec, [
                                       "priv/ct/v57.spec"
                                      ]}
                              ]},
                    {dialyzer, [
                                {warnings, [
                                            no_improper_lists,
                                            unmatched_returns,
                                            error_handling,
                                            race_conditions,
                                          % overspecs,
                                            underspecs,
                                          % specdiffs,
                                            unknown
                                           ]},
                                {plt_extra_apps, [
                                                  baseline
                                                 ]},
                                {base_plt_apps, [
                                                 common_test,
                                                 crypto,
                                                 erts,
                                                 kernel,
                                                 stdlib,
                                                 test_server
                                                ]}
                               ]}

                   ]}
           ]}.
